issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Grazing,Microbial,Phytoplankton,Resource ratio,Trait-based model},
number = {13},
pages = {6211--6220},
pmid = {30760589},
publisher = {National Academy of Sciences},
title = {{Mixotrophy in nanoflagellates across environmental gradients in the ocean}},
url = {www.pnas.org/cgi/doi/10.1073/pnas.1814860116},
