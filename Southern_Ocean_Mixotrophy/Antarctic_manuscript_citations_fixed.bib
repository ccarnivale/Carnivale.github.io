doi = {10.1016/j.dsr.2018.09.006},
file = {:Users/christophercarnivale/Library/Application Support/Mendeley Desktop/Downloaded/Viljoen et al. - 2018 - Phytoplankton response in growth, photophysiology and community structure to iron and light in the Polar Frontal.pdf:pdf},
