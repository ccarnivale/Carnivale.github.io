publisher = {John Wiley & Sons, Ltd},
title = {{The balance between photosynthesis and grazing in Antarctic mixotrophic cryptophytes during summer}},
url = {https://onlinelibrary.wiley.com/doi/full/10.1046/j.1365-2427.2002.00950.x https://onlinelibrary.wiley.com/doi/abs/10.1046/j.1365-2427.2002.00950.x https://onlinelibrary.wiley.com/doi/10.1046/j.1365-2427.2002.00950.x},
