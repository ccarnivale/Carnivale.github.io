doi = {10.1016/J.DSR.2017.04.014},
file = {:Users/christophercarnivale/Library/Application Support/Mendeley Desktop/Downloaded/Schofield et al. - 2017 - Decadal variability in coastal phytoplankton community composition in a changing West Antarctic Peninsula.pdf:pdf},
issn = {09670637},
journal = {Deep-Sea Research Part I: Oceanographic Research Papers},
month = {jun},
pages = {42--54},
publisher = {Elsevier Ltd},
title = {{Decadal variability in coastal phytoplankton community composition in a changing West Antarctic Peninsula}},
