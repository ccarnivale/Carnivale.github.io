file = {:Users/christophercarnivale/Library/Application Support/Mendeley Desktop/Downloaded/Becquevort, Menon, Lancelot - 2000 - Differences of the protozoan biomass and grazing during spring and summer in the Indian sector of t.pdf:pdf},
issn = {07224060},
journal = {Polar Biology},
number = {5},
pages = {309--320},
publisher = {Springer Verlag},
title = {{Differences of the protozoan biomass and grazing during spring and summer in the Indian sector of the Southern Ocean}},
volume = {23},
